{
  "name": "fitbuddy",
  "version": "1.0.0",
  "description": "Application FitBuddy",
  "scripts": {
    "start": "cd backend && npm start",
    "heroku-postbuild": "NPM_CONFIG_PRODUCTION=false && cd backend && npm install && cd ../frontend && npm install && npm run build && cd ../backend",
    "build": "cd frontend && npm run build"
  },
  "engines": {
    "node": "18.x",
    "npm": "10.x"
  },
  "cacheDirectories": [
    "node_modules",
    "frontend/node_modules",
    "backend/node_modules"
  ]
}
